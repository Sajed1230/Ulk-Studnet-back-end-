<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Exams - ULK Sudanice Community</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #e0f7f4;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #50e05c;
            margin-bottom: 30px;
        }

        /* Exam list grid */
        .exam-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            max-width: 1200px;
            margin: auto;
        }

        /* Exam card */
        .exam-card {
            background: #fff;
            padding: 25px 20px;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .exam-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

        .exam-card h3 {
            color: #3cb305;
            margin-bottom: 10px;
            text-align: center;
        }

        .exam-card p {
            margin: 5px 0;
            font-weight: 500;
        }

        /* Buttons */
        .card-buttons {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        .btn {
            padding: 10px 15px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            color: white;
            transition: background 0.3s ease;
        }

        .open-btn {
            background: #05b3a4;
        }

        .open-btn:hover {
            background: #049286;
        }

        .edit-btn {
            background: #f0ad4e;
        }

        .edit-btn:hover {
            background: #ec971f;
        }

        .delete-btn {
            background: #d9534f;
        }

        .delete-btn:hover {
            background: #c9302c;
        }

        /* Responsive */
        @media (max-width: 700px) {
            .exam-list {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>

<body>

    <%- include('header') %>

        <h1>All Exams - ULK Sudanice Community</h1>

        <div class="exam-list">
            <% if (exams.length===0) { %>
                <p style="text-align:center;">No exams found.</p>
                <% } else { %>
                    <% exams.forEach(exam=> { %>
                        <div class="exam-card">
                            <h3>
                                <%= exam.name %>
                            </h3>
                            <p><strong>Year:</strong>
                                <%= exam.year %>
                            </p>
                            <p><strong>Type:</strong>
                                <%= exam.typeExam %>
                            </p>
                            <p><strong>Track:</strong>
                                <%= exam.track %>
                            </p>
                            <p><strong>Major:</strong>
                                <%= exam.major %>
                            </p>

                            <!-- Action Buttons -->
                            <div class="card-buttons">
                                <!-- Open PDF button uses public Cloudinary URL -->
                                <% if (exam.pdfPath) { %>
                                    <a href="<%= exam.pdfPath %>" target="_blank" class="btn open-btn">Download PDF</a>
                                    <% } %>

                                        <a href="/admin/edit/<%= exam._id %>" class="btn edit-btn">Edit</a>

                                        <form action="/admin/delete/<%= exam._id %>" method="POST"
                                            style="display:inline;">
                                            <button type="submit" class="btn delete-btn"
                                                onclick="return confirm('Are you sure you want to delete this exam?')">Delete</button>
                                        </form>
                            </div>
                        </div>
                        <% }) %>
                            <% } %>
        </div>

</body>

</html>