<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Exams - ULK Sudanice Community</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #e0f7f4;
            margin: 0;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #50e05c;
            margin-bottom: 20px;
        }

        /* Search form */
        .search-form {
            max-width: 600px;
            margin: 0 auto 30px auto;
            display: flex;
            gap: 10px;
            justify-content: center;
        }

        .search-form input,
        .search-form select {
            padding: 10px 15px;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 16px;
            flex: 1;
        }

        /* Exam list grid */
        .exam-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            max-width: 1200px;
            margin: auto;
        }

        .exam-card {
            background: #fff;
            padding: 25px 20px;
            border-radius: 12px;
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
        }

        .exam-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15);
        }

        .exam-card h3 {
            color: #3cb305;
            margin-bottom: 10px;
            text-align: center;
        }

        .exam-card p {
            margin: 5px 0;
            font-weight: 500;
        }

        /* Buttons */
        .card-buttons {
            display: flex;
            gap: 10px;
            margin-top: 15px;
        }

        .btn {
            padding: 10px 15px;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
            color: white;
            transition: background 0.3s ease;
            cursor: pointer;
        }

        .open-btn {
            background: #05b3a4;
        }

        .open-btn:hover {
            background: #049286;
        }

        .edit-btn {
            background: #f0ad4e;
        }

        .edit-btn:hover {
            background: #ec971f;
        }

        .delete-btn {
            background: #d9534f;
            border: none;
        }

        .delete-btn:hover {
            background: #c9302c;
        }

        @media (max-width: 700px) {
            .exam-list {
                grid-template-columns: 1fr;
            }

            .search-form {
                flex-direction: column;
            }
        }
    </style>
</head>

<body>

    <%- include('header') %>

        <h1>All Exams - ULK Sudanice Community</h1>

        <!-- 🔍 Search Form -->
        <form class="search-form" id="searchForm" action="/shop/all-exams" method="GET">
            <input type="text" id="searchName" name="name" placeholder="Search by exam name"
                value="<%= typeof name !== 'undefined' ? name : '' %>">
            <select name="typeExam" id="searchType">
                <option value="">All Types</option>
                <option value="Cat 11" <%=typeExam==='Cat 11' ? 'selected' : '' %>>Cat 11</option>
                <option value="Fat" <%=typeExam==='Fat' ? 'selected' : '' %>>Fat</option>
                <option value="Quiz" <%=typeExam==='Quiz' ? 'selected' : '' %>>Quiz</option>
            </select>
            <button type="submit">Search</button>
        </form>


        <!-- Exam List -->
        <div class="exam-list" id="examList">
            <% if (exams.length===0) { %>
                <p style="text-align:center;">No exams found.</p>
                <% } else { %>
                    <% exams.forEach(exam=> { %>
                        <div class="exam-card">
                            <h3>
                                <%= exam.name %>
                            </h3>
                            <p><strong>Year:</strong>
                                <%= exam.year %>
                            </p>
                            <p><strong>Type:</strong>
                                <%= exam.typeExam %>
                            </p>
                            <p><strong>Track:</strong>
                                <%= exam.track %>
                            </p>
                            <p><strong>Major:</strong>
                                <%= exam.major %>
                            </p>

                            <div class="card-buttons">
                                <% if (exam.pdfPath) { %>
                                    <a href="<%= exam.pdfPath %>" target="_blank" class="btn open-btn">View PDF</a>
                                    <% } %>
                                        <a href="/admin/edit/<%= exam._id %>" class="btn edit-btn">Edit</a>
                                        <form action="/admin/delete/<%= exam._id %>" method="POST"
                                            style="display:inline;">
                                            <button type="submit" class="btn delete-btn"
                                                onclick="return confirm('Are you sure you want to delete this exam?')">Delete</button>
                                        </form>
                            </div>
                        </div>
                        <% }) %>
                            <% } %>
        </div>

        <script>
            const nameInput = document.getElementById('searchName');
            const typeSelect = document.getElementById('searchType');
            const examList = document.getElementById('examList');

            let timeout = null;

            async function fetchExams() {
                const name = nameInput.value;
                const typeExam = typeSelect.value;
                const params = new URLSearchParams({ name, typeExam });

                try {
                    const res = await fetch('/admin/all-exams/json?' + params.toString());
                    const exams = await res.json();

                    if (exams.length === 0) {
                        examList.innerHTML = '<p style="text-align:center;">No exams found.</p>';
                        return;
                    }

                    examList.innerHTML = exams.map(exam => `
                    <div class="exam-card">
                        <h3>${exam.name}</h3>
                        <p><strong>Year:</strong> ${exam.year}</p>
                        <p><strong>Type:</strong> ${exam.typeExam}</p>
                        <p><strong>Track:</strong> ${exam.track}</p>
                        <p><strong>Major:</strong> ${exam.major}</p>
                        <div class="card-buttons">
                            ${exam.pdfPath ? `<a href="${exam.pdfPath}" target="_blank" class="btn open-btn">View PDF</a>` : ''}
                            <a href="/admin/edit/${exam._id}" class="btn edit-btn">Edit</a>
                            <form action="/admin/delete/${exam._id}" method="POST" style="display:inline;">
                                <button type="submit" class="btn delete-btn" 
                                    onclick="return confirm('Are you sure you want to delete this exam?')">Delete</button>
                            </form>
                        </div>
                    </div>
                `).join('');
                } catch (err) {
                    console.error(err);
                }
            }

            // Debounce for smooth typing
            nameInput.addEventListener('input', () => {
                clearTimeout(timeout);
                timeout = setTimeout(fetchExams, 300);
            });

            typeSelect.addEventListener('change', fetchExams);
        </script>

</body>

</html>